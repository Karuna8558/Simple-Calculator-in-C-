//#include <iostream>
#include <bits/stdc++.h>

using namespace std;

int main(){
   char op;
  float num1, num2, result;

  cout << "Enter first operand: ";
  cin >> num1;
  cout << "Enter operator: +, -, *, /: ";
  cin >> op;
  cout << "Enter second operand: ";
  cin >> num2;
  
       if (op == '+')
        result = num1 + num2;
       
      else if (op == '-')
        result = num1 - num2;
      
      else if (op == '*')
        result = num1 * num2;
      
      else if (op == '/')
        result = num1 / num2;
     
      else {
        cout << "Error! operator is not corrected";
        result = -DBL_MAX;
      }
      
      return 0;
}
